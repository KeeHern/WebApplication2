@page
@inject IHttpContextAccessor _context;
@inject IDataProtectionProvider _dataProtectionProvider;
@using Microsoft.AspNetCore.DataProtection

@{
    ViewData["Title"] = "Home page";
}

@{
    var emailfromdatabase = _context.HttpContext.Session.GetString("User_Email");
     var get_email = "";
     if (emailfromdatabase != null)
     {

        var protector = _dataProtectionProvider.CreateProtector("EmailProtection");
         get_email = protector.Unprotect(emailfromdatabase);
     }
     else
     {
        get_email = "";
     }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Ace Job Agency</p>
    <h1>Welcome to Ace Job Agency, your trusted partner in finding the perfect career opportunity. 
        At Ace, we understand that finding the right job can be a daunting task, which is why 
        we're here to simplify the process for you. With our extensive network of employers 
        and personalized approach, we connect talented individuals with rewarding positions 
        in various industries. Whether you're a recent graduate eager to kick-start your career 
        or an experienced professional seeking new challenges, Ace Job Agency is dedicated to 
        helping you achieve your goals. Explore our comprehensive range of services and let us 
        assist you in unlocking your full potential. Your dream job awaits – let's embark 
        on this journey together.</h1>
</div>